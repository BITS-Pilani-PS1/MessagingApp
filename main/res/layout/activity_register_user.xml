<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clolorMainBackground"
    tools:context=".RegisterUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alike_angular"
            android:text="Register User"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textColor="@color/clolorHeading"
            android:layout_marginTop="30dp"/>

        <ImageView
            android:id="@+id/registerActivity_profilePic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_baseline_person_24"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Name:"
            android:layout_marginTop="30sp"
            android:fontFamily="@font/alike"
            android:textSize="24sp"
            android:textColor="@color/clolorTitile"/>

        <EditText
            android:id="@+id/registerActivity_firstname"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/editbox"
            android:hint="Enter Your First Name"
            android:padding="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name:"
            android:layout_marginTop="30sp"
            android:fontFamily="@font/alike"
            android:textSize="24sp"
            android:textColor="@color/clolorTitile"/>

        <EditText
            android:id="@+id/registerActivity_lastname"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/editbox"
            android:hint="Enter Your Last Name"
            android:padding="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:fontFamily="@font/alike"
            android:text=" Date of Birth:"
            android:textColor="@color/clolorTitile"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/registerActivity_DOB"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/editbox"
            android:hint="Click to select Date of Birth"
            android:padding="10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:layout_marginTop="30sp"
            android:fontFamily="@font/alike"
            android:textSize="24sp"
            android:textColor="@color/clolorTitile"/>

        <EditText
            android:id="@+id/registerActivity_username"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/editbox"
            android:hint="Enter Your Username"
            android:padding="10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:layout_marginTop="30sp"
            android:fontFamily="@font/alike"
            android:textSize="24sp"
            android:textColor="@color/clolorTitile"/>

        <EditText
            android:id="@+id/registerActivity_password"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/editbox"
            android:hint="Enter Your Password"
            android:padding="10dp" />

        <Button
            android:id="@+id/registerActivity_registerBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"
            android:background="@color/clolorButtonText"
            android:text="REGISTER"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/registerActivity_registered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already Register? Login"
            android:textSize="16sp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/advent_pro_semibold"
            android:textColor="@color/black"/>
    </LinearLayout>

</ScrollView>